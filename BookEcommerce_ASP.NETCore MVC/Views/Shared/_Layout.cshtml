<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>E Store - eCommerce HTML Template</title>
	<meta content="width=device-width, initial-scale=1.0" name="viewport">
	<meta content="eCommerce HTML Template Free Download" name="keywords">
	<meta content="eCommerce HTML Template Free Download" name="description">

	<!-- Favicon -->
	<link href="~/image/bookhouse.ico" rel="icon">

	<!-- Google Fonts -->
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap" rel="stylesheet">

	<!-- CSS Libraries -->
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
	<link href="/lib/slick/slick.css" rel="stylesheet">
	<link href="/lib/slick/slick-theme.css" rel="stylesheet">

	<!-- Template Stylesheet -->
	<link href="/css/style.css" rel="stylesheet">

</head>
<body>
	<header>
		<div class="top-bar">
			<div class="container-fluid">
				<div class="row">
					<div class="col-sm-6">
						<i class="fa fa-envelope"></i>
						DACNA - 22
					</div>
					<div class="col-sm-6">
						<i class="fa fa-phone-alt"></i>
						<a href="0584194012">058.419.4012</a>
					</div>
				</div>
			</div>
		</div>
		<!-- Top bar End -->
		<!-- Nav Bar Start -->
		<div class="nav">
			<div class="container-fluid">
				<nav class="navbar navbar-expand-md bg-dark navbar-dark">
					<a href="#" class="navbar-brand"></a>
					<button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
						<div class="navbar-nav mr-auto">
							<a class="nav-item nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a>
							<a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Product">Sản Phẩm</a>
							@* <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="ProductDetail">Chi Tiết</a>*@
							<a class="nav-item nav-link" asp-area="" asp-controller="Product" asp-action="Cart">Giỏ Hàng</a>
							<a class="nav-item nav-link" asp-area="" asp-controller="Product" asp-action="Checkout">Thanh Toán</a>


							<div class="nav-item dropdown">
								<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Thêm</a>
								<div class="dropdown-menu">
									<a class="dropdown-item" asp-area="" asp-controller="User" asp-action="MyAccount">Tài Khoản</a>

									<a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Contact">Liên Hệ</a>
								</div>
							</div>
						</div>

						<div class="navbar-nav ml-auto">
							@await Html.PartialAsync("_HeaderPartial.cshtml")
						</div>

					</div>
				</nav>
			</div>
		</div>
		<!-- Nav Bar End -->
		<!-- Bottom Bar Start -->
		<div class="bottom-bar">
			<div class="container-fluid">
				<div class="row align-items-center">
					<div class="col-md-3">
						<div class="logo">
							<a asp-area="" asp-controller="Home" asp-action="Index">
								<img src="~/image/bookhouse.svg" alt="Logo">
							</a>
						</div>
					</div>
					<div class="col-md-6">
						<div class="search">
							<form asp-action="Search" asp-controller="Product" method="get">
								<input type="text" name="keyword" placeholder="Tìm Kiếm">
								<button type="submit"><i class="fa fa-search"></i></button>
							</form>
						</div>
					</div>
					<div class="col-md-3">
						<div class="user">
							@await Html.PartialAsync("_CartPartial")
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
	<!-- Footer Bottom Start -->
	<div class="footer-bottom">
		<div class="container">
			<div class="row">
				<div class="col-md-6 copyright">
					<p>Copyright &copy; <a href="https://www.facebook.com/tranmon.1803012">Mon Tran</a>. All Rights Reserved</p>
				</div>

				<div class="col-md-6 template-by">
					<p>Template By <a href="https://www.facebook.com/tranmon.1803012">Mon Tran</a></p>
				</div>
			</div>
		</div>
	</div>
	<!-- Footer Bottom End -->
	<div class="hotline-phone-ring-wrap">
		<div class="hotline-phone-ring">
			<div class="hotline-phone-ring-circle"></div>
			<div class="hotline-phone-ring-circle-fill"></div>
			<div class="hotline-phone-ring-img-circle">
				<a href="tel:0584194012" class="pps-btn-img">
					<img src="https://nguyenhung.net/wp-content/uploads/2019/05/icon-call-nh.png" alt="Gọi điện thoại" width="50">
				</a>
			</div>
		</div>

		<div class="hotline-bar">
			<a href="tel:0584194012">
				<span class="text-hotline">058 419 4012</span>
			</a>
		</div>
	</div>
	<!-- Back to Top -->
	<a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

	<!-- JavaScript Libraries -->
	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
	<script src="/lib/easing/easing.min.js"></script>
	<script src="/lib/slick/slick.min.js"></script>

	<!-- Template Javascript -->
	<script src="/js/main.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>