@model ClassLibrary_RepositoryDLL.Models.LoginModel
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="login">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-3" style="text-indent:80px;">
			</div>
			<div class="col-lg-6">
				<div class="login-form">
					<form asp-action="Login" asp-controller="User">
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="row">
							<div class="col-md-6">
								<h2><strong>Đăng Nhập</strong></h2>
								<label asp-for="Username">Username</label>
								<input asp-for="Username" class="form-control" type="text" placeholder="Username">
								<span asp-validation-for="Username" class="text-danger"></span>
							</div>
							<div class="col-md-6" style="margin-top: 46px">
								<label asp-for="Password">Password</label>
								<input asp-for="Password" class="form-control" type="password" placeholder="Password" id="pwd">
								<span asp-validation-for="Password" class="text-danger"></span>
								<input type="checkbox" onclick="showPassword()">Show Password
							</div>
							<div class="col-md-12">
								<button type="submit" class="btn">Login</button>
							</div>

						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	function showPassword() {
		var x = document.getElementById("pwd");
		if (x.type === "password") {
			x.type = "text";
		} else {
			x.type = "password";
		}
	}
</script>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}

